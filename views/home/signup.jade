extends ../home

block content
  div(class="row")
    div(class="col-md-3")
    div(class="col-md-6 col-xs-12 col-sm-12") 
      if message.length > 0
        div(class="alert alert-warning") #{message}
      form(method="POST" action="/login/local/signup" class="form-horizontal")
        fieldset
          legend Sign up
          p(class="text-center text-info") Please, fill the blanks.
          div(class="form-group")
            div(class="col-lg-12")
              div(class="input-group")
                span(class="input-group-addon") 
                  span(class="glyphicon glyphicon-user")
                input(name="username" type="text" class="form-control" placeholder="User")
          div(class="form-group")
            div(class="col-lg-12")
              div(class="input-group")
                span(class="input-group-addon") 
                  span(class="glyphicon glyphicon-lock")
                input(name="password" type="password" class="form-control" placeholder="Password")      
          div(class="form-group")
            div(class="col-lg-12")
              div(class="input-group")
                span(class="input-group-addon") 
                  span(class="glyphicon glyphicon-lock")
                input(name="samepassword" type="password" class="form-control" placeholder="Confirm Password")
          input(type="submit" class="btn btn-success pull-right" value="Confirm")
    
